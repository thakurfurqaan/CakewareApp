<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddressActivity"
    android:id="@+id/drawer_layout">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="104dp"
            android:backgroundTint="#00BCD4"
            android:text="Enter Address Manually"
            android:textColorHighlight="#FFFFFF"
            android:textColorHint="#00BCD4"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="114dp"
            android:layout_height="78dp"
            android:layout_marginStart="148dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/logo_c" />

        <Button
            android:id="@+id/button10"
            android:layout_width="110dp"
            android:layout_height="50dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="27dp"
            android:backgroundTint="#FF9800"
            android:onClick="ClickMenu"
            android:text="Menu"
            app:icon="@drawable/ic_baseline_menu_24"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/button9"
            android:layout_width="110dp"
            android:layout_height="50dp"
            android:layout_marginStart="284dp"
            android:layout_marginTop="28dp"
            android:backgroundTint="#00BCD4"
            android:text="Cart"
            app:icon="@drawable/ic_baseline_shopping_cart_24"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/address1_input"
            android:layout_width="378dp"
            android:layout_height="47dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="164dp"
            android:ems="10"
            android:hint="Address Line 1"
            android:inputType="textPersonName"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/display_address"
            android:layout_width="378dp"
            android:layout_height="166dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="532dp"
            android:text="No saved addresses found!"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/display_address2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="224dp"
            android:text="Address Line 2"
            android:textColor="#00BCD4"
            android:textColorHint="#FF9800"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/display_address4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="300dp"
            android:text="Pincode"
            android:textColor="#00BCD4"
            android:textColorHint="#FF9800"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/display_address7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="376dp"
            android:text="State"
            android:textColor="#00BCD4"
            android:textColorHint="#FF9800"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/display_address6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="220dp"
            android:layout_marginTop="300dp"
            android:text="City"
            android:textColor="#00BCD4"
            android:textColorHint="#FF9800"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/display_address8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="220dp"
            android:layout_marginTop="372dp"
            android:text="Country"
            android:textColor="#00BCD4"
            android:textColorHint="#FF9800"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/address2_input"
            android:layout_width="378dp"
            android:layout_height="47dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="240dp"
            android:ems="10"
            android:hint="Address Line 2"
            android:inputType="textPersonName"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/address_pincode_input"
            android:layout_width="175dp"
            android:layout_height="47dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="316dp"
            android:ems="10"
            android:hint="Pincode"
            android:inputType="textPersonName"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/address_state_input"
            android:layout_width="175dp"
            android:layout_height="47dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="392dp"
            android:ems="10"
            android:hint="State"
            android:inputType="textPersonName"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/address_country_input"
            android:layout_width="175dp"
            android:layout_height="47dp"
            android:layout_marginStart="220dp"
            android:layout_marginTop="392dp"
            android:ems="10"
            android:hint="Country"
            android:inputType="textPersonName"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/address_city_input"
            android:layout_width="175dp"
            android:layout_height="47dp"
            android:layout_marginStart="220dp"
            android:layout_marginTop="316dp"
            android:ems="10"
            android:hint="City"
            android:inputType="textPersonName"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/display_address3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="148dp"
            android:text="Address Line 1"
            android:textColor="#00BCD4"
            android:textColorHint="#FF9800"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/load_location_btn"
            android:layout_width="182dp"
            android:layout_height="66dp"
            android:layout_marginStart="212dp"
            android:layout_marginTop="456dp"
            android:backgroundTint="#FF9800"
            android:text="View My Saved Address"
            android:textSize="12sp"
            app:icon="@drawable/ic_baseline_save_24"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/save_location_btn"
            android:layout_width="182dp"
            android:layout_height="66dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="456dp"
            android:backgroundTint="#00BCD4"
            android:text="Save My Address"
            android:textSize="12sp"
            app:icon="@drawable/ic_baseline_add_location_24"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/nav_header_main"
        app:menu="@menu/activity_main_drawer"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="-277dp"
        tools:layout_editor_absoluteY="-27dp" />


</androidx.drawerlayout.widget.DrawerLayout>